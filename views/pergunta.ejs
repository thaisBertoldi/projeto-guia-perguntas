<%-include('partials/header.ejs') %>
  <body>
    <%-include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <form class="form-resposta" method="POST" action="/responder">
            <textarea name="corpo" placeholder="Digite sua resposta" class="form-control"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-dark botao-resposta">Responder</button>
        </form>
        <h3>Respostas</h3>
        <% respostas.forEach(resposta => { %>
            <div class="card card-resposta">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <% }) %>
    </div>

  </body>
<%-include('partials/scripts.ejs') %>